<idea-plugin url="https://plugins.jetbrains.com/plugin/17026">
    <id>com.github.minasploit.migrationfacilitator</id>
    <name>Migration Facilitator</name>
    <vendor url="https://github.com/minasploit" email="minasploit@gmail.com">Minasie Shibeshi</vendor>
    <version>1.0.3</version>

    <idea-version since-build="145" until-build="211.*"/>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- <extensions defaultExtensionNs="com.intellij"/>-->

    <actions>
        <group id="com.github.minasploit.migrationfacilitator.Migrations" text="Migrations" popup="true">
            <add-to-group group-id="MainMenu" anchor="before" relative-to-action="HelpMenu"/>
            <action id="com.github.minasploit.migrationfacilitator.actions.AddMigration"
                    class="com.github.minasploit.migrationfacilitator.actions.AddMigration" text="Add Migration">
            </action>
            <action id="com.github.minasploit.migrationfacilitator.actions.RemoveMigration"
                    class="com.github.minasploit.migrationfacilitator.actions.RemoveMigration" text="Remove Migration">
            </action>
            <action id="com.github.minasploit.migrationfacilitator.actions.UpdateDatabase"
                    class="com.github.minasploit.migrationfacilitator.actions.UpdateDatabase" text="Update Database">
            </action>
            <separator/>
            <action id="com.github.minasploit.migrationfacilitator.actions.VersionAction"
                    class="com.github.minasploit.migrationfacilitator.actions.VersionAction" text="Version 1.0.3"/>
        </group>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.github.minasploit.migrationfacilitator.extensions.StartupListener"/>
    </extensions>
</idea-plugin>
